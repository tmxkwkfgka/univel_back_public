{
  "name": "nuber-server",
  "version": "1.0.0",
  "description": "Server for the (N)Uber Clone Course on Nomad Academy. GraphQL, Typescript, NodeJS",
  "main": "index.js",
  "repository": "https://github.com/nomadcoders/nuber-server",
  "author": "Nicolás Serrano Arévalo <itnico.las.me@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/bcrypt": "^2.0.0",
    "@types/jsonwebtoken": "^7.2.7",
    "@types/mailgun-js": "^0.16.0",
    "@types/node": "^10.17.4",
    "@types/twilio": "^0.0.9"
  },
  "scripts": {
    "predev": "yarn run types",
    "dev": "cd src && nodemon --exec ts-node index.ts -e ts,graphql",
    "pretypes": "gql-merge --out-file ./src/schema.graphql ./src/api/**/*.graphql",
    "types": "graphql-to-typescript ./src/schema.graphql ./src/types/graph.d.ts",
    "prebuild": "rm -rf dist",
    "build": "tsc",
    "postbuild": "cd src && copy ./api/**/*.graphql ../dist/api",
    "start": "cd dist && node ."
  },
  "dependencies": {
    "@typegoose/typegoose": "^6.1.0",
    "apollo-server": "^2.9.7",
    "apollo-server-express": "^2.9.7",
    "aws-sdk": "^2.591.0",
    "babel-runtime": "^6.26.0",
    "bcrypt": "^2.0.1",
    "class-validator": "^0.8.5",
    "copy": "^0.3.2",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "express": "^4.17.1",
    "firebase-admin": "^8.8.0",
    "gql-merge": "^0.0.6",
    "graphql": "^14.5.8",
    "graphql-request": "^1.8.2",
    "graphql-to-typescript": "^0.1.2",
    "graphql-tools": "^4.0.6",
    "graphql-yoga": "^1.18.3",
    "helmet": "^3.12.1",
    "jsonwebtoken": "^8.3.0",
    "mailgun-js": "^0.19.0",
    "merge-graphql-schemas": "^1.7.3",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.27",
    "mongodb": "^3.3.5",
    "mongoose": "^5.7.8",
    "morgan": "^1.9.0",
    "node-schedule": "^1.3.2",
    "nodemailer": "^6.4.2",
    "nodemon": "^2.0.1",
    "pg": "^7.4.3",
    "sendmail": "^1.6.1",
    "ts-node": "^8.4.1",
    "tslint-config-prettier": "^1.13.0",
    "twilio": "^3.17.4",
    "typeorm": "^0.2.7",
    "typescript": "^3.7.2"
  },
  "now": {
    "name": "nuber-server",
    "dotenv": ".env.production"
  }
}
